{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["es2017", "dom", "scripthost"],
		"allowJs": true,
		"jsx": "react",
		"sourceMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"pretty": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true
	},
	"files": ["declare.d.ts"],
	"awesomeTypescriptLoaderOptions": {
		"reportFiles": ["./src/**/*"]
	}
}
